@model CandleShop.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<h2 class="bro-text">Bro Login</h2>
<br />
<form action="~/Account/Login" method="post">
    @Html.ValidationSummary()
    <h3 class="bro-text">User Name: <input type="text" name="UserName" value="" /></h3><br />
    <br />
    <h3 class="bro-text">Password: <input type="password" name="Password" /><br /></h3>
    <br />
    <input type="submit" class="btn-primary btn-lg mt-2" />
    <br /><br />
    <p style="font-size: medium">Forgot your username or password? <strong><a href="/Account/GetEmail">Click Here</a></strong></p>
</form>