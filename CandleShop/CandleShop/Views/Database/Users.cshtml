
@{
    ViewBag.Title = "Users";
}

<h2 class="bro-text">List of Bros</h2>

<table id="user-table" class="table border-dark">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Email</th>
        <th>State</th>
    </tr>

    @foreach (var user in ViewBag.UserList)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            @if (user.PhoneNumber != null)
            {
                <td>@user.PhoneNumber</td>
            }
            <td>@user.Email</td>
            <td>@user.State</td>
        </tr>
    }

</table>

<div>
    <a type="button" href="/Home/Index" class="btn btn-primary btn-lg mr-5">Home</a>
    <a type="button" href="/Database/Products" class="btn btn-primary btn-lg">See List of Candles</a>
</div>

